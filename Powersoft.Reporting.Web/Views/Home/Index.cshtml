@model Powersoft.Reporting.Web.ViewModels.DatabaseSelectionViewModel
@{
    ViewData["Title"] = "Database Selection";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>
                    <i class="bi bi-database me-2"></i>@(Model.IsConnected ? "Change Database" : "Select Database")
                </span>
                @if (Model.IsConnected)
                {
                    <span class="status-badge status-connected">
                        <i class="bi bi-check-circle-fill"></i> Currently logged in to database: @Model.ConnectedDatabaseName
                    </span>
                }
            </div>
            <div class="card-body p-4">
                @if (TempData["Warning"] != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        @TempData["Warning"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.DisplayName))
                {
                    <div class="mb-3 text-muted small">
                        <i class="bi bi-person me-1"></i>@Model.DisplayName
                        <span class="ms-2 badge bg-secondary">@Model.RoleName</span>
                        @if (Model.IsSystemAdmin)
                        {
                            <span class="ms-1 badge bg-warning text-dark">Admin</span>
                        }
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        @Model.ErrorMessage
                    </div>
                }
                
                <div class="row g-4">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-building me-1"></i>Company
                        </label>
                        <select id="companySelect" class="form-select form-select-lg">
                            @if (Model.Companies.Count == 0)
                            {
                                <option value="">No companies available</option>
                            }
                            else if (Model.Companies.Count == 1)
                            {
                                <option value="@Model.Companies[0].CompanyCode" selected>@Model.Companies[0].CompanyName</option>
                            }
                            else
                            {
                                <option value="">Select a company...</option>
                                @foreach (var company in Model.Companies)
                                {
                                    <option value="@company.CompanyCode">@company.CompanyName</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-database me-1"></i>Database
                        </label>
                        <select id="databaseSelect" class="form-select form-select-lg" disabled>
                            <option value="">Select a company first...</option>
                        </select>
                    </div>
                </div>
                
                <div class="mt-4 d-flex gap-2">
                    <button id="connectBtn" class="btn btn-primary btn-lg flex-grow-1" disabled>
                        <i class="bi bi-arrow-right me-2"></i>Continue
                    </button>
                    @if (Model.IsConnected)
                    {
                        <a href="@Url.Action("Index", "Reports")" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-bar-chart me-1"></i>Reports
                        </a>
                    }
                </div>
                
                <div id="connectionStatus" class="mt-3" style="display: none;">
                    <div class="d-flex align-items-center justify-content-center">
                        <div class="spinner-border spinner-border-sm text-primary me-2" role="status"></div>
                        <span>Connecting...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Pre-loaded accessible databases (already filtered server-side by ranking + module + user-DB link)
    const accessibleDatabases = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
        Model.AccessibleDatabases.Select(d => new { value = d.DBCode, text = d.DBFriendlyName, company = d.CompanyCode })));

    const companySelect = document.getElementById('companySelect');
    const dbSelect = document.getElementById('databaseSelect');
    const connectBtn = document.getElementById('connectBtn');

    function loadDatabasesForCompany(companyCode) {
        if (!companyCode) {
            dbSelect.innerHTML = '<option value="">Select a company first...</option>';
            dbSelect.disabled = true;
            connectBtn.disabled = true;
            return;
        }

        const filtered = accessibleDatabases.filter(d => d.company === companyCode);

        if (filtered.length === 0) {
            dbSelect.innerHTML = '<option value="">No databases available</option>';
            dbSelect.disabled = true;
            connectBtn.disabled = true;
            return;
        }

        if (filtered.length === 1) {
            // Single DB: auto-select it
            dbSelect.innerHTML = '';
            const opt = document.createElement('option');
            opt.value = filtered[0].value;
            opt.textContent = filtered[0].text;
            opt.selected = true;
            dbSelect.appendChild(opt);
            dbSelect.disabled = false;
            connectBtn.disabled = false;
        } else {
            dbSelect.innerHTML = '<option value="">Select a database...</option>';
            filtered.forEach(db => {
                const opt = document.createElement('option');
                opt.value = db.value;
                opt.textContent = db.text;
                dbSelect.appendChild(opt);
            });
            dbSelect.disabled = false;
            connectBtn.disabled = true;
        }
    }

    companySelect.addEventListener('change', function() {
        loadDatabasesForCompany(this.value);
    });

    dbSelect.addEventListener('change', function() {
        connectBtn.disabled = !this.value;
    });

    connectBtn.addEventListener('click', async function() {
        const dbCode = dbSelect.value;
        if (!dbCode) return;
        
        const btn = this;
        const status = document.getElementById('connectionStatus');
        
        btn.disabled = true;
        status.style.display = 'block';
        
        try {
            const response = await fetch('/Home/Connect', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `databaseCode=${encodeURIComponent(dbCode)}`
            });
            
            const result = await response.json();
            
            if (result.success) {
                window.location.href = '@Url.Action("Index", "Reports")';
            } else {
                alert(result.message);
                btn.disabled = false;
                status.style.display = 'none';
            }
        } catch (error) {
            alert('Connection failed. Please try again.');
            btn.disabled = false;
            status.style.display = 'none';
        }
    });

    // If single company is pre-selected (auto-selected when only 1 company), load its databases
    if (companySelect.value) {
        loadDatabasesForCompany(companySelect.value);
    }
</script>
}
