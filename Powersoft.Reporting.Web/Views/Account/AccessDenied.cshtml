@{
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <i class="bi bi-shield-x text-danger" style="font-size: 6rem;"></i>
            <h1 class="mt-4">Access Denied</h1>
            <p class="text-muted lead">You do not have permission to access this resource.</p>
            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-house me-2"></i>Go to Home
                </a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary ms-2">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                </a>
            </div>
        </div>
    </div>
</div>
